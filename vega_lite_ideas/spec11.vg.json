{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/family_income_aggregates.csv"
  },
  "transform": [
    {
      "lookup": "lga_2016",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/mean_investment_income.csv"
        },
        "key": "LGA_2018"
      },
      "as": "mean_investment_income_row"
    },
    {
      "lookup": "lga_2016",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/private_insurance_holders_number.csv"
        },
        "key": "LGA_2018"
      },
      "as": "private_insurance_row"
    },
    {
      "lookup": "lga_2016",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/total_population.csv"
        },
        "key": "LGA_2018"
      },
      "as": "total_population_row"
    },
    {
      "calculate": "round(datum.total_annual_incomes / datum.total_families)",
      "as": "mean_annual_income"
    },
    {
      "calculate": "datum.mean_investment_income_row ? datum.mean_investment_income_row.OBS_VALUE : null",
      "as": "mean_investment_income"
    },
    {
      "calculate": "(datum.private_insurance_row && datum.total_population_row) ? datum.private_insurance_row.OBS_VALUE / datum.total_population_row.OBS_VALUE : null",
      "as": "private_insurance_percentage"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "point",
        "tooltip": {
          "content": "data"
        },
        "color": "red"
      },
      "encoding": {
        "x": {
          "field": "mean_annual_income",
          "type": "quantitative"
        },
        "y": {
          "field": "mean_investment_income_row.OBS_VALUE",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "x": {
          "field": "mean_annual_income",
          "type": "quantitative"
        },
        "y": {
          "field": "private_insurance_percentage",
          "type": "quantitative"
        }
      }
    }
  ],
  "resolve": {
    "scale": {
      "y": "independent"
    }
  }
}