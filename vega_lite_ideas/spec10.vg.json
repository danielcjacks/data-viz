{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1300,
  "height": 1300,
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/LGA_2020_AUST.json",
    "format": {
      "type": "topojson",
      "feature": "LGA_2020_AUST"
    }
  },
  "transform": [
    {
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/family_income_aggregates.csv"
        },
        "key": "lga_2016",
        "fields": [
          "lga_2016",
          "total_families",
          "total_weekly_incomes",
          "total_annual_incomes"
        ]
      }
    },
    {
      "calculate": "round(datum.total_annual_incomes/datum.total_families)",
      "as": "mean_annual_income"
    },
    {
      "calculate": "geoCentroid(null, datum)",
      "as": "centroid"
    },
    {
      "calculate": "datum.total_families / datum.properties.AREASQKM20",
      "as": "population_density"
    }, 
    {
      "calculate": "datum.properties.AREASQKM20",
      "as": "circle_opacity"
    },
    {
      "calculate": "(datum.mean_annual_income - 36902) / (226101 - 36902)",
      "as": "normalized_annual_income"
    },
    {
      "calculate": "1 + (datum.population_density / 1470)",
      "as": "normalized_population_density"
    },
    {
      "calculate": "datum.normalized_annual_income * datum.normalized_population_density / 2",
      "as": "color_value"
    }
  ],
  "layer": [
    {
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "mark": {
        "type": "geoshape",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "color": {
          "field": "color_value",
          "type": "quantitative",
          "scale": {
            "scheme": "redyellowgreen"
          }
        }
      }
    }
  ]
}