{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 600,
  "background": "none",
  "title": "Mean family income in Sydney",
  "autosize": {
    "type": "fit-x",
    "resize": true,
    "contains": "content"
  },
  "params": [
    {
      "name": "show_urban_regions",
      "bind": {
        "input": "checkbox",
        "element": "#show-urban-zoomed",
        "name": "Show urban regions (zoomed)"
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/LGA_2020_AUST.json",
    "format": {
      "type": "topojson",
      "feature": "LGA_2020_AUST"
    }
  },
  "transform": [
    {
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/family_income_aggregates.csv"
        },
        "key": "lga_2016",
        "fields": [
          "lga_2016",
          "total_families",
          "total_weekly_incomes",
          "total_annual_incomes"
        ]
      }
    },
    {
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/total_population.csv"
        },
        "key": "LGA_2018",
        "fields": [
          "OBS_VALUE"
        ]
      }
    },
    {
      "calculate": "round(datum.total_annual_incomes/datum.total_families)",
      "as": "mean_annual_income"
    },
    {
      "calculate": "geoCentroid(null, datum)",
      "as": "centroid"
    },
    {
      "calculate": "datum.OBS_VALUE / datum.properties.AREASQKM20",
      "as": "population_density"
    },
    {
      "calculate": "datum.properties.AREASQKM20",
      "as": "region_size"
    },
    {
      "calculate": "datum.population_density > 100 ? 'darkred' : 'darkblue'",
      "as": "color_scheme"
    },
    {
      "calculate": "datum.population_density > 300 && datum.OBS_VALUE >= 5000",
      "as": "is_urban"
    },
    {
      "filter": "datum.properties.LGA_CODE20 != '99399'"
    },
    {
      "calculate": "datum.mean_annual_income * !datum.is_urban",
      "as": "joinaggregate_sum"
    }
  ],
  "encoding": {
    "tooltip": [
      {
        "field": "properties.LGA_NAME20",
        "title": "Region"
      },
      {
        "field": "population_density",
        "format": ".2r",
        "title": "People per square km"
      },
      {
        "field": "mean_annual_income",
        "format": "$.2s"
      }
    ]
  },
  "layer": [
    {
      "transform": [
        {
          "filter": "!datum.is_urban || !show_urban_regions"
        }
      ],
      "mark": {
        "type": "geoshape",
        "tooltip": {
          "content": "data"
        },
        "strokeWidth": 0
      },
      "encoding": {
        "color": {
          "field": "mean_annual_income",
          "type": "quantitative",
          "scale": {
            "scheme": "darkblue",
            "domainMin": 37000,
            "domainMax": 226101
          },
          "legend": {
            "title": "Rural mean annual income",
            "direction": "horizontal",
            "orient": "right",
            "gradientLength": 150,
            "values": [37000, 230000]
          }
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.is_urban && show_urban_regions"
        }
      ],
      "mark": {
        "type": "geoshape",
        "tooltip": {
          "content": "data"
        },
        "strokeWidth": 0
      },
      "encoding": {
        "color": {
          "field": "mean_annual_income",
          "type": "quantitative",
          "scale": {
            "scheme": "darkgold",
            "domainMin": 37000,
            "domainMax": 226101
          },
          "legend": {
            "title": "Urban mean annual income",
            "direction": "horizontal",
            "orient": "right",
            "gradientLength": 150,
            "values": [37000, 230000]
          }
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.properties.LGA_CODE20 == 18500"
        }
      ],
      "mark": {
        "type": "geoshape",
        "tooltip": {
          "content": "data"
        },
        "strokeWidth": 1.2,
        "stroke": "#d41f2e",
        "fillOpacity": 0
      }
    },
    {
      "transform": [
        {
          "filter": "datum.properties.LGA_CODE20 == 18500"
        }
      ],
      "mark": {
        "type": "text",
        "opacity": 1,
        "text": ["Woollahra has a", "mean family income", "of 200k.", "West Daly (a rural", "region in NT) has a", "mean family income", "of just 42k"],
        "color": "#cccccc",
        "dx": 90,
        "dy": -20,
        "line":true
      },
      "encoding": {
        "longitude": {
          "field": "centroid[0]",
          "type": "quantitative"
        },
        "latitude": {
          "field": "centroid[1]",
          "type": "quantitative"
        }
      }
    }
  ],
  "projection": {
    "type": "identity",
    "reflectY": true,
    "fit": [
      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates": [
            150.6,
            -33
          ]
        }
      },
      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates": [
            151,
            -33
          ]
        }
      },
      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates": [
            151,
            -35
          ]
        }
      },
      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates": [
            150.6,
            -35
          ]
        }
      }
    ],
    "clipExtent": [
      [
        20,
        20
      ],
      [
        800,
        500
      ]
    ]
  },
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "config": {
    "legend": {
      "labelColor": "darkgrey",
      "titleColor": "dimgrey"
    },
    "title": {
      "color": "#b3b3b3"
    }
  }
}