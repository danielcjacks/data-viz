{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1300,
  "height": 1300,
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/LGA_2020_AUST.json",
    "format": {
      "type": "topojson",
      "feature": "LGA_2020_AUST"
    }
  },
  "transform": [
    {
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/family_income_aggregates.csv"
        },
        "key": "lga_2016",
        "fields": [
          "lga_2016",
          "total_families",
          "total_weekly_incomes",
          "total_annual_incomes"
        ]
      }
    },
    {
      "calculate": "round(datum.total_annual_incomes/datum.total_families)",
      "as": "mean_annual_income"
    },
    {
      "calculate": "geoCentroid(null, datum)",
      "as": "centroid"
    },
    {
      "calculate": "datum.total_families / datum.properties.AREASQKM20",
      "as": "circle_size"
    }, 
    {
      "calculate": "datum.properties.AREASQKM20",
      "as": "circle_opacity"
    }
  ],
  "layer": [
    {
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "mark": {
        "type": "geoshape",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "color": {
          "field": "mean_annual_income",
          "type": "quantitative",
          "bin": false
        }
      }
    },
    {
      "mark": {
        "type": "circle",
        "opacity": 1,
        "color": "red"
      },
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "encoding": {
        "size":{
          "field": "circle_size",
          "type": "quantitative",
          "scale": {
            "range": [0, 5000]
          }
        },
        "longitude": {
          "field": "centroid[0]",
          "type": "quantitative"
        },
        "latitude": {
          "field": "centroid[1]",
          "type": "quantitative"
        },
        "opacity": {
          "field": "circle_opacity",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "domain": [0, 50000],
            "range": [0, 0.5]
          }
        }
      }
      
    }
  ]
}