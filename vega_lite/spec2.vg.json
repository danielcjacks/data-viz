{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 10000,
    "height": 1000,
    "data": {
      "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/LGA_2020_AUST.json",
      "format": {
        "type": "topojson",
        "feature": "LGA_2020_AUST"
      }
    },
    "transform": [{
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/family_incomes.csv"
        },
        "key": "lga_2016",
        "fields": ["lga_2016", "people"]
      }
    }],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "lga_2016",
        "type": "nominal",
        "sort": {
          "field": "people",
          "order": "descending",
          "op": "sum"
        }
      },
      "y": {
        "field": "people",
        "type": "quantitative",
        "aggregate": "sum"
      },
      "color": {
        "field": "people",
        "type": "quantitative",
        "scale": {
          "type": "symlog"
        }
      }
    }
  }