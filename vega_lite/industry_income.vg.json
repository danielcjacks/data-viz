{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "background": "none",
  "autosize": {
    "type": "fit-x",
    "resize": true,
    "contains": "content"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/industry_global_stats.csv"
  },
  "transform": [
    {
      "calculate": "datum.total_wages / datum.total_employment",
      "as": "mean_wage"
    },
    {
      "filter": "indexof(['agriculture', 'construction', 'education', 'health care', 'hospitality', 'mining', 'public administration', 'retail', 'scientific and technical services', 'utility services'], datum.industry_type) != -1"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "y": {
          "field": "industry_type",
          "type": "nominal",
          "sort": {
            "field": "mean_wage",
            "order": "descending"
          }
        },
        "x": {
          "field": "mean_wage",
          "type": "quantitative"
        },
        "size": {
          "field": "total_employment",
          "type": "quantitative"
        }
      }
    }
  ],
  "config": {
    "legend": {
      "labelColor": "darkgrey",
      "titleColor": "dimgrey"
    },
    "axis": {
      "gridColor": "grey",
      "labelColor": "darkgrey",
      "titleColor": "dimgrey",
      "grid": false
    },
    "view": {
      "stroke": "transparent"
    }
  }
}