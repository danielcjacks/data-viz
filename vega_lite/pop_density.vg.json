{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "none",
  "autosize": {
    "type": "fit-x",
    "resize": true,
    "contains": "content"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/LGA_2020_AUST_simplified.json",
    "format": {
      "type": "topojson",
      "feature": "LGA_2020_AUST"
    }
  },
  "transform": [
    {
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/total_population.csv"
        },
        "key": "LGA_2018",
        "fields": [
          "OBS_VALUE"
        ]
      }
    },
    {
      "calculate": "datum.OBS_VALUE",
      "as": "total_people"
    },
    {
      "calculate": "datum.total_people / datum.properties.AREASQKM20",
      "as": "population_density"
    },
    {
      "filter": "datum.properties.LGA_CODE20 != '99399'"
    },
    {
      "sort": [
        {
          "field": "population_density"
        }
      ],
      "window": [
        {
          "op": "sum",
          "field": "total_people",
          "as": "cumulative_people"
        }
      ],
      "frame": [
        null,
        0
      ]
    }
  ],
  "vconcat": [
    {
      "transform": [
        {
          "filter": {
            "param": "brush"
          }
        }
      ],
      "width": "container",
      "height": 800,
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "population_density",
          "type": "quantitative",
          "scale": {
            "scheme": "darkblue",
            "type": "symlog"
          },
          "legend": {
            "title": "People per square km",
            "orient": "bottom-right",
            "gradientLength": 100,
            "values": [
              1,
              100,
              8000
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.LGA_NAME20",
            "title": "Region"
          },
          {
            "field": "population_density",
            "format": ".1r",
            "title": "People per square km"
          }
        ]
      }
    },
    {
      "height": 100,
      "width": "container",
      "mark": {
        "type": "area",
        "color": "#47576d"
      },
      "encoding": {
        "x": {
          "field": "population_density",
          "type": "quantitative",
          "axis": {
            "title": "People per square km",
            "values": [
              1,
              10,
              100,
              1000,
              8000
            ]
          },
          "scale": {
            "type": "symlog"
          }
        },
        "y": {
          "field": "cumulative_people",
          "type": "quantitative",
          "axis": {
            "title": "Total people"
          }
        }
      },
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "encodings": [
              "x"
            ],
            "on": {
              "source": "window",
              "type": "mousemove",
              "consume": true,
              "between": [
                {
                  "source": "scope",
                  "type": "mousedown",
                  "filter": [
                    "!event.item || event.item.mark.name !== \"brush_brush\""
                  ]
                },
                {"source": "window", "type": "mouseup"}
              ]
            }
          }
        }
      ]
    }
  ],
  "config": {
    "legend": {
      "labelColor": "darkgrey",
      "titleColor": "dimgrey"
    },
    "axis": {
      "gridColor": "dimgrey",
      "labelColor": "darkgrey",
      "titleColor": "dimgrey",
      "grid": false,
      "domainColor": "dimgrey",
      "tickColor": "dimgrey"
    },
    "view": {
      "stroke": "transparent"
    }
  }
}