{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 800,
  "background": "none",
  "autosize": {
    "type": "fit-x",
    "resize": true,
    "contains": "content"
  },
  "title": "Mean family income by region",
  "params": [{
    "name": "show_urban_regions",
    "bind": {
      "input": "checkbox",
      "element": "#show-urban-overview",
      "name": "Show urban regions (overview)"
    }
  }],
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/LGA_2020_AUST_simplified.json",
    "format": {
      "type": "topojson",
      "feature": "LGA_2020_AUST"
    }
  },
  "transform": [
    {
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/family_income_aggregates.csv"
        },
        "key": "lga_2016",
        "fields": [
          "lga_2016",
          "total_families",
          "total_weekly_incomes",
          "total_annual_incomes"
        ]
      }
    },
    {
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/total_population.csv"
        },
        "key": "LGA_2018",
        "fields": [
          "OBS_VALUE"
        ]
      }
    },
    {
      "calculate": "round(datum.total_annual_incomes/datum.total_families)",
      "as": "mean_annual_income"
    },
    {
      "calculate": "geoCentroid(null, datum)",
      "as": "centroid"
    },
    {
      "calculate": "datum.OBS_VALUE / datum.properties.AREASQKM20",
      "as": "population_density"
    },
    {
      "calculate": "datum.properties.AREASQKM20",
      "as": "region_size"
    },
    {
      "calculate": "datum.population_density > 100 ? 'darkred' : 'darkblue'",
      "as": "color_scheme"
    },
    {
      "calculate": "datum.population_density > 300 && datum.OBS_VALUE >= 5000",
      "as": "is_urban"
    },
    {
      "filter": "datum.properties.LGA_CODE20 != '99399'"
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "filter": "!datum.is_urban || !show_urban_regions"
        }
      ],
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "mean_annual_income",
          "type": "quantitative",
          "scale": {
            "scheme": "darkblue",
            "domainMin": 37000,
            "domainMax": 226101
          },
          "legend": {
            "title": "Rural mean annual income",
            "direction": "horizontal",
            "orient": "right",
            "gradientLength": 150,
            "values": [37000, 230000]
          }
        },
        "tooltip": [
          {
            "field": "properties.LGA_NAME20",
            "title": "Region"
          },
          {
            "field": "population_density",
            "format": ".2r",
            "title": "People per square km"
          },
          {
            "field": "mean_annual_income",
            "format": "$.2s"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum.is_urban && show_urban_regions"
        }
      ],
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "mark": {
        "type": "geoshape",
        "strokeWidth": 0
      },
      "encoding": {
        "color": {
          "field": "mean_annual_income",
          "type": "quantitative",
          "scale": {
            "scheme": "darkgold",
            "domainMin": 37000,
            "domainMax": 226101
          },
          "legend": {
            "title": "Urban mean annual income",
            "direction": "horizontal",
            "orient": "right",
            "gradientLength": 150,
            "values": [37000, 230000]
          }
        },
        "tooltip": [
          {
            "field": "properties.LGA_NAME20",
            "title": "Region"
          },
          {
            "field": "population_density",
            "format": ".2r",
            "title": "People per square km"
          },
          {
            "field": "mean_annual_income",
            "format": "$.2s"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum.OBS_VALUE == 158411"
        }
      ],
      "mark": {
        "type": "square",
        "opacity": 1,
        "strokeWidth": 2,
        "stroke": "white",
        "fillOpacity": 0,
        "size": 5000
      },
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "encoding": {
        "longitude": {
          "field": "centroid[0]",
          "type": "quantitative"
        },
        "latitude": {
          "field": "centroid[1]",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.OBS_VALUE == 26534"
        }, {
          "calculate": "datum.centroid[1] + 6.8",
          "as": "lat"
        }
      ],
      "mark": {
        "type": "rect",
        "opacity": 1,
        "strokeWidth": 0.5,
        "stroke": "white",
        "fillOpacity": 0,
        "width": 0,
        "height": 200
      },
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "encoding": {
        "longitude": {
          "field": "centroid[0]",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.OBS_VALUE == 158411"
        }, {
          "calculate": "datum.centroid[1]",
          "as": "lat"
        }
      ],
      "mark": {
        "type": "text",
        "text": "Sydney",
        "opacity": 1,
        "color": "#cccccc",
        "dx": 70,
        "dy": 0
      },
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "encoding": {
        "longitude": {
          "field": "centroid[0]",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.properties.LGA_CODE20 == 70200"
        }, {
          "calculate": "datum.centroid[1]",
          "as": "lat"
        }
      ],
      "mark": {
        "type": "text",
        "text": ["Alice springs is much more populated", "than the surrounding regions.", "It also has a much higher average", "income than surrounding regions."],
        "opacity": 1,
        "color": "#cccccc",
        "dy": -310
      },
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "encoding": {
        "longitude": {
          "field": "centroid[0]",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        }
      }
    }
  ],
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "config": {
    "legend": {
      "labelColor": "darkgrey",
      "titleColor": "dimgrey"
    },
    "tick": {
      "color": "#b3b3b3"
    },
    "title": {
      "color": "#b3b3b3"
    }
  }
}