{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "background": "none",
  "autosize": {
    "type": "fit-x",
    "resize": true,
    "contains": "content"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/LGA_2020_AUST.json",
    "format": {
      "type": "topojson",
      "feature": "LGA_2020_AUST"
    }
  },
  "transform": [
    {
      "lookup": "properties.LGA_CODE20",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/family_income_aggregates.csv"
        },
        "key": "lga_2016",
        "fields": [
          "lga_2016",
          "total_families",
          "total_weekly_incomes",
          "total_annual_incomes"
        ]
      }
    },
    {
      "calculate": "round(datum.total_annual_incomes/datum.total_families)",
      "as": "mean_annual_income"
    },
    {
      "calculate": "geoCentroid(null, datum)",
      "as": "centroid"
    },
    {
      "calculate": "datum.total_families / datum.properties.AREASQKM20",
      "as": "population_density"
    },
    {
      "calculate": "datum.properties.AREASQKM20",
      "as": "region_size"
    },
    {
      "calculate": "datum.population_density > 100 ? 'darkred' : 'darkblue'",
      "as": "color_scheme"
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "filter": "datum.population_density < 1"
        }
      ],
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "mark": {
        "type": "geoshape",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "color": {
          "field": "mean_annual_income",
          "type": "quantitative",
          "scale": {
            "scheme": "darkblue",
            "domainMid": 90000
          },
          "legend": {
            "title": "Mean annual income"
          }
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.population_density > 1"
        }
      ],
      "projection": {
        "type": "identity",
        "reflectY": true
      },
      "mark": {
        "type": "geoshape",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "color": {
          "field": "mean_annual_income",
          "type": "quantitative",
          "scale": {
            "scheme": "darkred",
            "domainMid": 90000
          },
          "legend": {
            "title": "Mean annual incomes"
          }
        }
      }
    }
  ],
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "config": {
    "legend": {
      "labelColor": "darkgrey",
      "titleColor": "dimgrey"
    }
  }
}