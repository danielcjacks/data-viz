{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "background": "none",
  "autosize": {
    "type": "fit-x",
    "resize": true,
    "contains": "content"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/industry_geo_max.csv"
  },
  "transform": [
    {
      "lookup": "lga_2016",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/LGA_2020_AUST.json",
          "format": {
            "type": "topojson",
            "feature": "LGA_2020_AUST"
          }
        },
        "key": "properties.LGA_CODE20",
        "fields": [
          "properties"
        ]
      }
    },
    {
      "lookup": "lga_2016",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/total_population.csv"
        },
        "key": "LGA_2018",
        "fields": [
          "OBS_VALUE"
        ]
      }
    },
    {
      "lookup": "max_industry_type",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/industry_global_stats.csv"
        },
        "key": "industry_type",
        "fields": [
          "industry_type",
          "total_employment",
          "total_wages"
        ]
      }
    },
    {
      "calculate": "datum.total_wages / datum.total_employment",
      "as": "mean_wage"
    },
    {
      "calculate": "datum.max_people / datum.total_people_for_lga",
      "as": "industry_percentage"
    },
    {
      "filter": "datum.properties"
    },
    {
      "calculate": "datum.properties ? parseInt(datum.OBS_VALUE) / parseInt(datum.properties.AREASQKM20) : -1",
      "as": "population_density"
    },
    {
      "filter": "datum.max_industry_type != 'not described' && datum.max_industry_type != 'transport and warehousing'"
    }
  ],
  "encoding": {
    "y": {
      "field": "industry_type",
      "type": "nominal",
      "sort": ["mining", "utility services", "scientific and technical services", "construction", "public administration", "education", "health care", "retail", "hospitality", "agriculture"],
      "axis": {
        "grid": true,
        "tickOffset": -15,
        "labelOffset": 15,
        "title": null,
        "ticks": false,
        "domain": false,
        "labelPadding": 7
      }
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/danielcjacks/data-viz/master/datasets/industry_global_stats.csv"
      },
      "transform": [
        {
          "calculate": "datum.total_wages / datum.total_employment",
          "as": "mean_wage"
        },
        {
          "filter": "indexof(['agriculture', 'construction', 'education', 'health care', 'hospitality', 'mining', 'public administration', 'retail', 'scientific and technical services', 'utility services'], datum.industry_type) != -1"
        }
      ],
      "mark": {
        "type": "bar",
        "tooltip": {
          "content": "data"
        },
        "color": "#364355"
      },
      "encoding": {
        "x": {
          "field": "mean_wage",
          "type": "quantitative",
          "axis": {
            "orient": "top",
            "title": "Mean salary (AUD)",
            "titleColor": "#47576d",
            "tickCount": 4,
            "domain": false
          }
        },
        "opacity": {
          "field": "mean_wage",
          "type": "quantitative",
          "legend": {
            "title": "Mean salary (AUD)",
            "labelExpr": "'$' + datum.value",
            "tickCount": 3,
            "padding": 10
          }
        }
      }
    },
    {
      "mark": {
        "type": "square",
        "width": 100,
        "strokeWidth": 100,
        "tooltip": {
          "content": "data"
        },
        "color": "#eb7e20"
      },
      "encoding": {
        "x": {
          "field": "population_density",
          "type": "quantitative",
          "scale": {
            "type": "log"
          },
          "axis": {
            "orient": "bottom",
            "title": "People per square km",
            "titleColor": "#68503b",
            "tickCount": 4
          }
        },
        "opacity": {
          "field": "industry_percentage",
          "type": "quantitative",
          "scale": {
            "range": [0.1, 1]
          },
          "legend": {
            "title": ["Market share of the", "largest industry"],
            "labelExpr": "datum.value * 100 + '%'",
            "tickCount": 3,
            "padding": 10
          }
        }
      }
    }
  ],
  "config": {
    "legend": {
      "labelColor": "darkgrey",
      "titleColor": "dimgrey"
    },
    "axis": {
      "gridColor": "dimgrey",
      "labelColor": "darkgrey",
      "titleColor": "dimgrey",
      "grid": false,
      "domainColor": "dimgrey",
      "tickColor": "dimgrey"
    },
    "view": {
      "stroke": "transparent"
    }
  },
  "resolve": {
    "scale": {
      "x": "independent",
      "opacity": "independent"
    },
    "legend": {
      "opacity": "independent"
    }
  }
}